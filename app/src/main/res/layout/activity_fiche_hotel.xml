<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Fiche.FicheHotelActivity">

    <com.mapbox.mapboxsdk.maps.MapView
        android:id="@+id/MapViewFicheHotel"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        mapbox:layout_constraintBottom_toBottomOf="parent"
        mapbox:layout_constraintEnd_toEndOf="parent"
        mapbox:layout_constraintStart_toStartOf="parent"
        mapbox:layout_constraintTop_toTopOf="parent"
        mapbox:mapbox_cameraZoom="10"
        />

    <TextView
        android:id="@+id/TextViewFicheNameHotel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center_horizontal"
        tools:text="NOM RESTAURANT"/>

    <TextView
        android:id="@+id/TextViewFicheCategoryHotel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        tools:text="CatÃ©gorie"/>

    <Button
        android:id="@+id/ButtonEmailFicheHotel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="contact@resto.fr"
        android:background="@drawable/fiche_bouton_email"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textColor="@color/colorWhite"
        />

    <Button
        android:id="@+id/ButtonPhoneFicheHotel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="0102030405"
        android:background="@drawable/fiche_bouton_phone"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textColor="@color/colorWhite"/>

    <Button
        android:id="@+id/ButtonWebFicheHotel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="http://www.resto.fr"
        android:background="@drawable/fiche_bouton_web"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textColor="@color/colorWhite"/>

</LinearLayout>